<h1>新規投稿</h1>

<%= form_with(model: @post, local: true) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :store_name, '店舗名' %><br>
    <%= form.text_field :store_name %>
  </div>

  <div class="field">
    <%= form.label :beans_name, 'コーヒー豆の名前' %><br>
    <%= form.text_field :beans_name %>
  </div>

  <div class="field">
    <%= form.label :roast_level, '焙煎度 (1:ライト, 2:ミディアム, 3:ダーク)' %><br>
    <%= form.number_field :roast_level %>
  </div>

  <div class="field">
    <%= form.label :coffee_growing_regions, '生産地' %><br>
    <%= form.text_field :coffee_growing_regions %>
  </div>

  <div class="field">
    <%= form.label :photo, '写真のURL' %><br>
    <%= form.text_area :photo %>
  </div>

  <div class="field">
    <%= form.label :memo, 'メモ' %><br>
    <%= form.text_area :memo %>
  </div>

  <div class="actions">
    <%= form.submit '投稿する' %>
  </div>
<% end %>